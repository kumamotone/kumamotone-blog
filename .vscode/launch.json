{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: デバッグ",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      },
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Next.js: ブラウザ",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Next.js: フル",
      "configurations": ["Next.js: デバッグ", "Next.js: ブラウザ"]
    }
  ]
}
